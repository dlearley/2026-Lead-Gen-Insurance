# Development Environment Configuration
# Copy this file to .env.development and fill in your local values

# Application Environment
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=insurance_lead_gen_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/insurance_lead_gen_dev?schema=public

# Connection Pooling
DATABASE_MAX_CONNECTIONS=10
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=5000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS_ENABLED=false

# Neo4j Configuration
NEO4J_AUTH=neo4j/password
NEO4J_URI=bolt://localhost:7687
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_ENCRYPTION=false

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=leads_dev

# Vector Embeddings
VECTOR_DIMENSION=1536
EMBEDDING_MODEL=text-embedding-3-small

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_CLUSTER=dev-cluster
NATS_MONITOR_PORT=8222

# AI/ML Configuration
OPENAI_API_KEY=sk-test-dev-key-placeholder
ANTHROPIC_API_KEY=sk-ant-test-dev-key-placeholder
AI_PROVIDER=openai
AI_MODEL=gpt-4-turbo-preview

# Embedding Model
EMBEDDING_PROVIDER=openai
EMBEDDING_API_KEY=sk-test-dev-key-placeholder

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty
ENABLE_PERFORMANCE_LOGGING=true

# Development Features
ENABLE_DEBUG_ROUTES=true
ENABLE_MOCK_APIS=true
CORS_ORIGIN=http://localhost:5173
ENABLE_SWAGGER=true

# Feature Flags
ENABLE_AI_PROCESSING=true
ENABLE_EMAIL_SERVICE=true
ENABLE_SMS_SERVICE=false
ENABLE_RAG_FULL_PIPELINE=true

# Redis Queue Configuration
REDIS_QUEUE_HOST=localhost
REDIS_QUEUE_PORT=6379
REDIS_QUEUE_DB=1

# Email Configuration (Development - Use Mailtrap or similar)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-password
EMAIL_FROM=noreply@dev.insurechain.local

# Security Configuration (Development - Weaker settings)
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10
SESSION_SECRET=dev-session-secret-change-in-production

# Monitoring (Development)
ENABLE_METRICS=true
METRICS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTEL_SERVICE_NAME=insurechain-dev
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Cost Optimization (Development)
TRACE_SAMPLE_RATE=1.0
ENABLE_CACHE_WARMING=false

# Secrets Backend
SECRETS_BACKEND=env
AWS_REGION=us-east-1

# Local Development
NGROK_AUTHTOKEN=your-ngrok-token

# Test Data
SEED_TEST_DATA=true
TEST_LEAD_COUNT=100