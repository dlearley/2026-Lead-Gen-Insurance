# Production Environment Configuration
# Copy this file to .env.production and configure with production values
# ALL SENSITIVE VALUES MUST BE RETRIEVED FROM SECRETS MANAGER

# Application Environment
NODE_ENV=production
PORT=3000
API_URL=https://api.insurechain.app
FRONTEND_URL=https://insurechain.app

# Database Configuration - Production RDS with Multi-AZ
POSTGRES_USER=prod_user
POSTGRES_PASSWORD= # Retrieved from secrets manager
POSTGRES_DB=insurance_lead_gen_prod
POSTGRES_HOST=prod-db-primary.insurechain.internal
POSTGRES_PORT=5432
DATABASE_URL=postgresql://prod_user:${POSTGRES_PASSWORD}@prod-db-primary.insurechain.internal:5432/insurance_lead_gen_prod?schema=public
DATABASE_REPLICA_URL=postgresql://prod_user:${POSTGRES_PASSWORD}@prod-db-replica.insurechain.internal:5432/insurance_lead_gen_prod?schema=public

# Connection Pooling - Production Optimized
DATABASE_MAX_CONNECTIONS=50
DATABASE_IDLE_TIMEOUT=300000
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_STATEMENT_TIMEOUT=60000

# Redis Configuration - ElastiCache Cluster
REDIS_HOST=prod-redis-cluster.insurechain.internal
REDIS_PORT=6379
REDIS_PASSWORD= # Retrieved from secrets manager
REDIS_TLS_ENABLED=true
REDIS_CLUSTER_MODE=true

# Neo4j Configuration - Production Cluster
NEO4J_AUTH=neo4j/prod-password-placeholder
NEO4J_URI=bolt://prod-neo4j-cluster.insurechain.internal:7687
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_ENCRYPTION=true
NEO4J_CLUSTER_MODE=true

# Qdrant Configuration - Production Cluster
QDRANT_URL=https://qdrant.insurechain.internal
QDRANT_API_KEY= # Retrieved from secrets manager
QDRANT_COLLECTION_NAME=leads_prod

# Vector Embeddings
VECTOR_DIMENSION=1536
EMBEDDING_MODEL=text-embedding-3-small

# NATS Configuration - Production Cluster
NATS_URL=nats://nats-cluster.insurechain.internal:4222
NATS_CLUSTER=prod-cluster
NATS_MONITOR_PORT=8222
NATS_CLUSTER_SERVERS=nats://nats-1.insurechain.internal:4222,nats://nats-2.insurechain.internal:4222,nats://nats-3.insurechain.internal:4222

# AI/ML Configuration
OPENAI_API_KEY= # Retrieved from secrets manager
ANTHROPIC_API_KEY= # Retrieved from secrets manager
AI_PROVIDER=openai
AI_MODEL=gpt-4-turbo-preview

# Embedding Model
EMBEDDING_PROVIDER=openai
EMBEDDING_API_KEY= # Retrieved from secrets manager

# Rate Limiting - Production Limits
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_TRUST_PROXY=true

# Logging Configuration - Production Security
LOG_LEVEL=warn
LOG_FORMAT=json
ENABLE_PERFORMANCE_LOGGING=false
LOG_REDACT_SENSITIVE=true

# Production Features - Security Hardened
ENABLE_DEBUG_ROUTES=false
ENABLE_MOCK_APIS=false
CORS_ORIGIN=https://insurechain.app
ENABLE_SWAGGER=false

# Feature Flags
ENABLE_AI_PROCESSING=true
ENABLE_EMAIL_SERVICE=true
ENABLE_SMS_SERVICE=true
ENABLE_RAG_FULL_PIPELINE=true

# Redis Queue Configuration
REDIS_QUEUE_HOST=nats-cluster.insurechain.internal
REDIS_QUEUE_PORT=6379
REDIS_QUEUE_DB=0

# Email Configuration - Production SES
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USER= # Retrieved from secrets manager (SES SMTP user)
SMTP_PASS= # Retrieved from secrets manager (SES SMTP password)
EMAIL_FROM=noreply@insurechain.app
EMAIL_REPLY_TO=support@insurechain.app

# Security Configuration - Production Grade
JWT_SECRET= # Retrieved from secrets manager - Minimum 64 characters
JWT_EXPIRES_IN=1h
BCRYPT_ROUNDS=13
SESSION_SECRET= # Retrieved from secrets manager - Minimum 64 characters

# Security Headers
ENABLE_HSTS=true
ENABLE_CSP=true
ENABLE_X_FRAME_OPTIONS=true

# Monitoring - Production
ENABLE_METRICS=true
METRICS_PORT=9090
JAEGER_ENDPOINT=https://jaeger.insurechain.internal/api/traces
OTEL_SERVICE_NAME=insurechain-prod
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel.insurechain.internal:4317
OTEL_EXPORTER_OTLP_HEADERS= # Retrieved from secrets manager

# Cost Optimization - Production Scale
TRACE_SAMPLE_RATE=0.1
ENABLE_CACHE_WARMING=true
CACHE_WARMING_SCHEDULE=0 6 * * *

# Secrets Backend
SECRETS_BACKEND=aws-secrets-manager
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# CDN Configuration - Production CloudFront
CDN_URL=https://cdn.insurechain.app
CDN_DISTRIBUTION_ID=prod-cdn-id

# S3 Configuration - Production
S3_BUCKET=prod-insurechain-data
S3_REGION=us-east-1
S3_ENCRYPTION_ENABLED=true
S3_VERSIONING_ENABLED=true

# Webhooks
WEBHOOK_SECRET= # Retrieved from secrets manager

# Performance Monitoring - Production
ENABLE_APM=true
APM_SERVER_URL=https://apm.insurechain.internal
AP M_SECRET_TOKEN= # Retrieved from secrets manager

# Backup Configuration - Production
DB_BACKUP_RETENTION_DAYS=30
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_WINDOW=03:00-04:00

# Disaster Recovery
ENABLE_CROSS_REGION_REPLICATION=true
DR_REGION=us-west-2

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/insurechain.crt
SSL_KEY_PATH=/etc/ssl/private/insurechain.key

# Compliance
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for compliance
GDPR_COMPLIANCE_MODE=true

# WAF Configuration
WAF_ENABLED=true
WAF_RULESET=OWASP-CRS

# DDoS Protection
DDOS_PROTECTION_ENABLED=true
DDOS_PROTECTION_THRESHOLD=10000

# API Gateway
API_GATEWAY_ENABLED=true
API_GATEWAY_RATE_LIMIT=10000

# Service Mesh
SERVICE_MESH_ENABLED=true
SERVICE_MESH_PROVIDER=aws-app-mesh

# Canary Deployment
CANARY_DEPLOYMENT_ENABLED=true
CANARY_TRAFFIC_PERCENTAGE=5