{
  "name": "insurance-lead-gen-ai",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered insurance lead generation platform",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo build",
    "dev": "docker-compose up -d && turbo dev",
    "dev:services": "docker-compose up",
    "dev:apps": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "test:integration": "turbo test:integration",
    "test:e2e": "turbo test:e2e",
    "test:e2e:install": "playwright install --with-deps",
    "test:performance": "k6 run testing/performance/load-test.js",
    "test:performance:baseline": "k6 run -e SCENARIO=baseline testing/performance/load-test.js",
    "test:performance:peak": "k6 run -e SCENARIO=peak_load testing/performance/load-test.js",
    "test:performance:stress": "k6 run -e SCENARIO=stress testing/performance/load-test.js",
    "test:security": "echo 'Run security scans with OWASP ZAP'",
    "test:accessibility": "turbo test:accessibility",
    "test:compliance": "echo 'Run compliance tests'",
    "test:all": "npm run test:coverage && npm run test:integration && npm run test:e2e",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky install",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:studio": "turbo db:studio",
    "db:seed": "turbo db:seed",
    "format": "prettier --write \"**/*.{js,ts,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md,yml,yaml}\""
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@prisma/client": "5.8.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.0",
    "prisma": "^5.8.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "insurance",
    "lead-generation",
    "ai",
    "monorepo",
    "typescript"
  ],
  "author": "Insurance AI Team",
  "license": "MIT"
}
