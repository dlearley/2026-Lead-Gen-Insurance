# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=insurance_lead_gen
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Neo4j Graph Database
NEO4J_AUTH=neo4j/password
NEO4J_URI=bolt://localhost:7687
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_PORT=6333
QDRANT_REST_PORT=6334

# NATS Message Broker
NATS_URL=nats://localhost:4222
NATS_PORT=4222
NATS_MONITOR_PORT=8222

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# JWT & Security
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h

# API Rate limiting
API_RATE_LIMIT_POINTS=60
API_RATE_LIMIT_DURATION_SECONDS=60

# API Ports
API_PORT=3000
DATA_SERVICE_PORT=3001
ORCHESTRATOR_PORT=3002

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Application
NODE_ENV=development
APP_NAME=insurance-lead-gen-ai

# ============================================
# Monitoring & Observability (Phase 6.3)
# ============================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3003
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Loki
LOKI_PORT=3100

# Jaeger
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268
JAEGER_OTLP_GRPC_PORT=4317
JAEGER_OTLP_HTTP_PORT=4318

# AlertManager
ALERTMANAGER_PORT=9093

# Exporters
NODE_EXPORTER_PORT=9100
POSTGRES_EXPORTER_PORT=9187
REDIS_EXPORTER_PORT=9121

# ============================================
# Security & Compliance (Phase 6.6)
# ============================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_RATE_LIMITING=true

# Encryption
ENCRYPTION_KEY=  # Generate with: openssl rand -hex 32
ENCRYPTION_ALGORITHM=aes-256-gcm

# Secrets Management
SECRETS_BACKEND=env  # Options: env, aws, vault
AWS_SECRETS_MANAGER_REGION=us-east-1
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=
SECRETS_CACHE_TTL=300000  # 5 minutes

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true

# CORS
CORS_ORIGIN=http://localhost:3000  # Comma-separated for multiple origins
CORS_CREDENTIALS=true

# Session
SESSION_SECRET=  # Generate with: openssl rand -base64 32
SESSION_MAX_AGE=86400000  # 24 hours

# Data Privacy & GDPR
DATA_RETENTION_DAYS=365
ENABLE_GDPR_FEATURES=true

# Security Headers
ENABLE_SECURITY_HEADERS=true
CSP_REPORT_ONLY=false