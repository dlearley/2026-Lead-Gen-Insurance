# ============================================
# Monitoring & Observability (Phase 6.3 & Run 19.3)
# ============================================

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d
PROMETHEUS_SCRAPE_INTERVAL=15s

# Grafana
GRAFANA_PORT=3003
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_SERVER_ROOT_URL=https://monitoring.insurance-lead-gen.com

# Loki
LOKI_PORT=3100
LOKI_RETENTION=720h  # 30 days
LOKI_INGESTION_RATE_MB=10

# Jaeger
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268
JAEGER_OTLP_GRPC_PORT=4317
JAEGER_OTLP_HTTP_PORT=4318
JAEGER_STORAGE_TYPE=elasticsearch
JAEGER_ES_URL=http://elasticsearch:9200

# AlertManager
ALERTMANAGER_PORT=9093
ALERTMANAGER_CLUSTER_PORT=9094

# Exporters
NODE_EXPORTER_PORT=9100
POSTGRES_EXPORTER_PORT=9187
REDIS_EXPORTER_PORT=9121

# Production Monitoring (Run 19.3)
MONITORING_NAMESPACE=monitoring
GRAFANA_HOST=grafana.insurance-lead-gen.com
PROMETHEUS_HOST=prometheus.insurance-lead-gen.com
ALERTMANAGER_HOST=alertmanager.insurance-lead-gen.com
JAEGER_HOST=jaeger.insurance-lead-gen.com
STORAGE_CLASS=gp3
MONITORING_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Alert Notifications
SLACK_WEBHOOK_URL=
PAGERDUTY_INTEGRATION_KEY=
ALERT_EMAIL_FROM=alerts@insurance-lead-gen.com
ALERT_EMAIL_TO=team@insurance-lead-gen.com
SMTP_SERVER=smtp.gmail.com:587

# ============================================
# Security & Compliance (Phase 6.6)
# ============================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_RATE_LIMITING=true

# Encryption
ENCRYPTION_KEY=  # Generate with: openssl rand -hex 32
ENCRYPTION_ALGORITHM=aes-256-gcm

# Secrets Management
SECRETS_BACKEND=env  # Options: env, aws, vault
AWS_SECRETS_MANAGER_REGION=us-east-1
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=
SECRETS_CACHE_TTL=300000  # 5 minutes

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true

# CORS
CORS_ORIGIN=http://localhost:3000  # Comma-separated for multiple origins
CORS_CREDENTIALS=true

# Session
SESSION_SECRET=  # Generate with: openssl rand -base64 32
SESSION_MAX_AGE=86400000  # 24 hours

# Data Privacy & GDPR
DATA_RETENTION_DAYS=365
ENABLE_GDPR_FEATURES=true

# Security Headers
ENABLE_SECURITY_HEADERS=true
CSP_REPORT_ONLY=false