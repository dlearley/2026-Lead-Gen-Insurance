# Staging Environment Configuration
# Copy this file to .env.staging and configure with staging values
# This should mirror production settings but use staging resources

# Application Environment
NODE_ENV=staging
PORT=3000
API_URL=https://api.staging.insurechain.app
FRONTEND_URL=https://staging.insurechain.app

# Database Configuration - Staging RDS
POSTGRES_USER=staging_user
POSTGRES_PASSWORD= # Retrieved from secrets manager
POSTGRES_DB=insurance_lead_gen_staging
POSTGRES_HOST=staging-db.insurechain.internal
POSTGRES_PORT=5432
DATABASE_URL=postgresql://staging_user:${POSTGRES_PASSWORD}@staging-db.insurechain.internal:5432/insurance_lead_gen_staging?schema=public

# Connection Pooling
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=60000
DATABASE_CONNECTION_TIMEOUT=10000

# Redis Configuration - ElastiCache
REDIS_HOST=staging-redis.insurechain.internal
REDIS_PORT=6379
REDIS_PASSWORD= # Retrieved from secrets manager
REDIS_TLS_ENABLED=true

# Neo4j Configuration - Staging Instance
NEO4J_AUTH=neo4j/staging-password-placeholder
NEO4J_URI=bolt://staging-neo4j.insurechain.internal:7687
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_ENCRYPTION=true

# Qdrant Configuration
QDRANT_URL=https://qdrant.staging.insurechain.internal
QDRANT_API_KEY= # Retrieved from secrets manager
QDRANT_COLLECTION_NAME=leads_staging

# Vector Embeddings
VECTOR_DIMENSION=1536
EMBEDDING_MODEL=text-embedding-3-small

# NATS Configuration
NATS_URL=nats://nats.staging.insurechain.internal:4222
NATS_CLUSTER=staging-cluster
NATS_MONITOR_PORT=8222

# AI/ML Configuration
OPENAI_API_KEY= # Retrieved from secrets manager
ANTHROPIC_API_KEY= # Retrieved from secrets manager
AI_PROVIDER=openai
AI_MODEL=gpt-4-turbo-preview

# Embedding Model
EMBEDDING_PROVIDER=openai
EMBEDDING_API_KEY= # Retrieved from secrets manager

# Rate Limiting
RATE_LIMIT_REQUESTS=5000
RATE_LIMIT_WINDOW_MS=900000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_PERFORMANCE_LOGGING=true

# Staging Features
ENABLE_DEBUG_ROUTES=false
ENABLE_MOCK_APIS=false
CORS_ORIGIN=https://staging.insurechain.app
ENABLE_SWAGGER=true

# Feature Flags
ENABLE_AI_PROCESSING=true
ENABLE_EMAIL_SERVICE=true
ENABLE_SMS_SERVICE=true
ENABLE_RAG_FULL_PIPELINE=true

# Redis Queue Configuration
REDIS_QUEUE_HOST=nats.staging.insurechain.internal
REDIS_QUEUE_PORT=6379
REDIS_QUEUE_DB=0

# Email Configuration - Staging SES
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USER= # Retrieved from secrets manager (SES SMTP user)
SMTP_PASS= # Retrieved from secrets manager (SES SMTP password)
EMAIL_FROM=noreply@staging.insurechain.app

# Security Configuration
JWT_SECRET= # Retrieved from secrets manager
JWT_EXPIRES_IN=1d
BCRYPT_ROUNDS=12
SESSION_SECRET= # Retrieved from secrets manager

# Monitoring - Staging
ENABLE_METRICS=true
METRICS_PORT=9090
JAEGER_ENDPOINT=https://jaeger.staging.insurechain.internal/api/traces
OTEL_SERVICE_NAME=insurechain-staging
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel.staging.insurechain.internal:4317

# Cost Optimization
TRACE_SAMPLE_RATE=0.5
ENABLE_CACHE_WARMING=true

# Secrets Backend
SECRETS_BACKEND=aws-secrets-manager
AWS_REGION=us-east-1

# CDN Configuration
CDN_URL=https://cdn.staging.insurechain.app
CDN_DISTRIBUTION_ID=staging-cdn-id

# S3 Configuration
S3_BUCKET=staging-insurechain-data
S3_REGION=us-east-1

# Webhooks (if needed)
WEBHOOK_SECRET= # Retrieved from secrets manager

# Performance Monitoring
ENABLE_APM=true
APM_SERVER_URL=https://apm.staging.insurechain.internal

# Backup Configuration
DB_BACKUP_RETENTION_DAYS=7
ENABLE_AUTOMATED_BACKUPS=true