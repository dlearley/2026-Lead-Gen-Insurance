{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@insurance-lead-gen/core": ["packages/core/src/index.ts"],
      "@insurance-lead-gen/core/*": ["packages/core/src/*"],
      "@insurance-lead-gen/types": ["packages/types/src/index.ts"],
      "@insurance-lead-gen/types/*": ["packages/types/src/*"],
      "@insurance-lead-gen/config": ["packages/config/src/index.ts"],
      "@insurance-lead-gen/config/*": ["packages/config/src/*"]
    }
  },
  "include": ["apps/**/*.ts", "packages/**/*.ts"],
  "exclude": ["node_modules", "dist", "build", "coverage"]
}
