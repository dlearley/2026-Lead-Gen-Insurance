// Enums for type safety
enum LeadStatus {
  RECEIVED
  PROCESSING
  QUALIFIED
  ROUTED
  CONVERTED
  REJECTED
}

enum AssignmentStatus {
  PENDING
  ACCEPTED
  REJECTED
  TIMEOUT
}

enum InsuranceType {
  AUTO
  HOME
  LIFE
  HEALTH
  COMMERCIAL
}

enum PartnershipTier {
  BASIC
  STANDARD
  PREMIUM
  ELITE
  STRATEGIC
}

enum PartnershipStatus {
  ACTIVE
  PENDING
  SUSPENDED
  TERMINATED
  RENEWAL_NEEDED
}

// New Enums for Organization Management
enum OrganizationStatus {
  PENDING       // Just created, not yet activated
  ACTIVE        // Fully active
  SUSPENDED     // Temporarily disabled
  CANCELLED     // Permanently closed
}

enum SubscriptionStatus {
  PENDING       // Subscription not started
  ACTIVE        // Active subscription
  PAST_DUE      // Payment failed
  CANCELLED     // Cancelled
  EXPIRED       // Trial/period ended
}

// Enhanced User Role system
enum UserRole {
  USER          // Basic user
  AGENT         // Insurance agent (can view/leads)
  MANAGER       // Team manager (can manage agents)
  ADMIN         // Organization admin
  SUPER_ADMIN   // Platform admin
  VIEWER        // Read-only access
}

// Team Invitation Status
enum InvitationStatus {
  PENDING       // Sent but not accepted
  ACCEPTED      // Accepted and processed
  DECLINED      // Explicitly declined
  EXPIRED       // Token expired
  REVOKED       // Revoked by admin
}